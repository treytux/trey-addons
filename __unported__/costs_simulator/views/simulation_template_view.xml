<?xml version="1.0" encoding="UTF-8"?>
<openerp>
	<data>
		<!-- *************** DISEÑO DEL MENÚ **************** -->
		<menuitem id="simulationtemplate_menu" name="Simulation" />
		<!-- *********************** VISTA TREE ****************** -->
		<record model="ir.ui.view" id="simulation_template_tree_view">
			<field name="name">simulation.template.tree.view</field>
			<field name="model">simulation.template</field>
			<field name="type">tree</field>
			<field name="arch" type="xml">
				<tree string="Templates">
					<field name="name" />
					<field name="template_product_id" />
					<!--
						DOMAIN: INDICO QUE SOLO PUEDA MOSTRAR LOS REGISTROS QUE CUMPLAN LA
						CONDICIÓN. EL DOMAIN SE DEBE PONER TANTO EN EL PHYTON COMO EL EL
						FORM CONTEXT: AL CAMPO "TYPE_COST" LE DOY UN VALOR POR DEFECTO, LUEGO
						EN LA CLASE EN LA QUE DEFINO ESTE CAMPO, A LA HORA DE GRABAR LE
						INDICO QUE GRABE CON TYPE_COST = AL VALOR QUE LE PONGO
					-->
					<field name="purchase_template_lines_ids" domain="[('type_cost','=','Purchase')]" 
															context="{'type_cost':'Purchase'}" />
					<field name="investment_template_lines_ids" domain="[('type_cost','=','Investment')]"
															context="{'type_cost':'Investment'}" />
					<field name="subcontracting_template_lines_ids" domain="[('type_cost','=','Subcontracting Services')]"
															context="{'type_cost':'Subcontracting Services'}" />
					<field name="task_template_lines_ids" domain="[('type_cost','=','Task')]"
															context="{'type_cost':'Task'}" />
					<field name="others_template_lines_ids" domain="[('type_cost','=','Others')]"
															context="{'type_cost':'Others'}" />
				</tree>
			</field>
		</record>
		<!-- ******************* VISTA FORM ******************** -->
		<record model="ir.ui.view" id="simulation_template_form_view">
			<field name="name">simulation.template.form.view</field>
			<field name="model">simulation.template</field>
			<field name="type">form</field>
			<field name="arch" type="xml">
				<form string="Templates">
					<group colspan="4">
						<field name="name" />
						<field name="template_product_id" />
					</group>
					<notebook colspan="4">
						<page string="Purchases Lines">
							<!--
								DOMAIN: INDICO QUE SOLO PUEDA MOSTRAR LOS REGISTROS QUE CUMPLAN
								LA CONDICIÓN. EL DOMAIN SE DEBE PONER TANTO EN EL PHYTON COMO EL
								EL FORM CONTEXT: AL CAMPO "TYPE_COST" LE DOY UN VALOR POR DEFECTO,
								LUEGO EN LA CLASE EN LA QUE DEFINO ESTE CAMPO, A LA HORA DE
								GRABAR LE INDICO QUE GRABE CON TYPE_COST = AL VALOR QUE LE PONGO
							-->
							<field name="purchase_template_lines_ids" nolabel="1"
								   domain="[('type_cost','=','Purchase')]" context="{'type_cost':'Purchase'}" />			
						</page>
						<page string="Investments Lines">
							<field name="investment_template_lines_ids" nolabel="1"
								domain="[('type_cost','=','Investment')]" context="{'type_cost':'Investment'}" />
						</page>
						<page string="Subcontracting Lines">
							<field name="subcontracting_template_lines_ids" nolabel="1"
								domain="[('type_cost','=','Subcontracting Services')]" context="{'type_cost':'Subcontracting Services'}" />
						</page>
						<page string="Tasks Lines">
							<field name="task_template_lines_ids" nolabel="1"
								domain="[('type_cost','=','Task')]" context="{'type_cost':'Task'}" />
						</page>
						<page string="Others Lines">
							<field name="others_template_lines_ids" nolabel="1"
								domain="[('type_cost','=','Others')]" context="{'type_cost':'Others'}" />
						</page>
					</notebook>
				</form>
			</field>
		</record>
		<!-- ***** ACCIÓN PARA LA VENTANA DE LAS VISTAS ***** -->
		<record model="ir.actions.act_window" id="action_simulation_template">
			<field name="name">Templates</field>
			<field name="res_model">simulation.template</field>
			<field name="view_type">form</field>
			<field name="view_mode">tree,form</field>
		</record>
		<!-- ********** DISEÑO SUBMENUS (DERECHA) **********  -->
		<menuitem id="simulation_template_group_view" name="Simulation Template Group"
			parent="simulationtemplate_menu" />
		<menuitem id="simulation_template_menu_view" name="Templates"
			parent="simulation_template_group_view" action="action_simulation_template" />
	</data>
</openerp>
